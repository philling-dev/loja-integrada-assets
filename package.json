{
  "name": "admin-widgetvpn-dashboard",
  "version": "1.1.0",
  "description": "Dashboard Administrativo Multi-Projetos WidgetVPN com backup duplo inteligente",
  "main": "index.js",
  "scripts": {
    "dev": "node build/dev-server.js",
    "build": "node build/build.js",
    "deploy": "node build/deploy.js",
    "deploy:quick": "npm run build && node build/deploy.js 'Quick update'",
    "serve": "http-server admin -p 8080 -o",
    "clean": "rimraf assets/css/* assets/js/*",
    "start": "npm run serve",
    "push": "git add . && git commit -m 'Update dashboard' && git push",
    "backup:dual": "scripts/backup-dual-intelligent.sh",
    "version:patch": "scripts/deploy.sh patch",
    "version:minor": "scripts/deploy.sh minor",
    "version:major": "scripts/deploy.sh major"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philling-dev/loja-integrada-assets.git"
  },
  "keywords": [
    "loja-integrada",
    "ecommerce",
    "assets",
    "github-pages",
    "minify",
    "css",
    "javascript"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "clean-css": "^5.3.2",
    "terser": "^5.19.4",
    "http-server": "^14.1.1",
    "rimraf": "^5.0.1",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}

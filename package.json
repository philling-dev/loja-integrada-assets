{
  "name": "loja-integrada-assets",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de códigos para Loja Integrada com deploy automático via GitHub Pages",
  "main": "index.js",
  "scripts": {
    "dev": "node build/dev-server.js",
    "build": "node build/build.js",
    "deploy": "node build/deploy.js",
    "serve": "http-server admin -p 8080 -o",
    "minify": "node build/minify.js",
    "clean": "rimraf assets/css/* assets/js/*",
    "start": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[SEU-USERNAME]/loja-integrada-assets.git"
  },
  "keywords": [
    "loja-integrada",
    "ecommerce",
    "assets",
    "github-pages",
    "minify",
    "css",
    "javascript"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "clean-css": "^5.3.2",
    "terser": "^5.19.4",
    "http-server": "^14.1.1",
    "rimraf": "^5.0.1",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}